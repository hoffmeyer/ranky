            <div class="col-sm-2">
                <input id="newMatch-team2-score" class="form-control" ></input>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="newMatch-btn" type="submit" class="btn btn-primary pull-right">Register match</button>
            </div>
        </div>
    </form>
</div>
